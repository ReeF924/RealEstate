@using RealEstate.Models.ViewModels;
@{
    List<OfferList> offers = (List<OfferList>)this.ViewBag.Offers;
    bool isAdminView = this.ViewBag.IsAdminView;
    User user = this.ViewBag.User;
}

<div>
    <div>
        <div>
            @if (user.Type != 'u')
            {
                <div class="d-flex ml-2 mt-3">
                    <a asp-controller="Admin" asp-action="EditOffer" class="btn btn-success">Create Offer</a>
                </div>
            }
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Address</th>
                        <th>Category</th>
                        @if (isAdminView)
                        {
                            <th>Broker</th>
                            <th>Offers made</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (OfferList offer in offers)
                    {
                        <tr>
                            <td>
                                <a asp-controller="EstateOffers" asp-action="Detail" asp-route-id="@offer.Id">@offer.Name</a>
                            </td>
                            <td>
                                @offer.Price
                            </td>
                            <td>
                                @offer.Location
                            </td>
                            <td>
                                @offer.Category
                            </td>
                            @if (isAdminView)
                            {
                                <td>
                                    @offer.Broker
                                </td>
                                <td>
                                    @offer.OffersMade
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>